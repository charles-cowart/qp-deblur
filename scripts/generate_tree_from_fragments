import click

from qp_deblur.deblur import generate_tree_from_fragments

@click.command()
@click.argument('fp_fragments', required=True)
@click.argument('output_dir', required=True)
#execute needed to support click
def execute(fp_fragments, output_dir):
    """Generates a tree from fragments and puts the output in output_dir"""
    status, message = generate_tree_from_fragments(fp_fragments, output_dir)
    if status:
        print(message)  # message will be fp of output tree
    else:
        # message will be exception string
        print("An error occured: %s" % message)

if __name__ == '__main__':
    execute()

